<h1> Mages </h1>

<% if @mages.length > 0 %>
  <table>
    <thead>
      <tr>
        <th>Name </th>
        <th>Elemental Power </th>
        <th style="text-align: center" colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @mages.each do |mage| %>
        <tr>
          <td><%= mage.name %></td>
          <td><%= mage.elemental_power %></td>
          <td style="text-align: center">
            <%= button_to mage, method: :get, class:"btn btn-warning" do %> 
            <i class="fa fa-eye" aria-hidden="true"></i> Show  
            <% end %>
          </td>
          <td style="text-align: center">
            <%= button_to edit_mage_path(mage), method: :get, class:"btn btn-primary" do %> 
            <i class="fa fa-pencil" aria-hidden="true"></i> Edit  
            <% end %>
          </td>
          <td style="text-align: center">
            <%= button_to mage_path(mage), method: :delete, data: {
                    turbo_confirm: "Are you sure?"
                  }, class:"btn btn-danger" do %>
                <i class="fa fa-trash"></i> Delete
                <% end %>     
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No mages found.</p>
<% end %>
<br>

<%= button_to new_mage_path, method: :get, class:"btn btn-primary" do %> 
<i class="fa fa-plus" aria-hidden="true"></i> Create Mage
<% end %>
