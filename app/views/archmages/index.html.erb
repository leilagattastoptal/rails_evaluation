<h1> Archmages </h1>

<% if @archmages.length > 0 %>
  <table>
    <thead>
      <tr>
        <th>Name </th>
        <th>Title </th>
        <th style="text-align: center" colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @archmages.each do |archmage| %>
        <tr>
          <td><%= archmage.name %></td>
          <td><%= archmage.title %></td>
          <td style="text-align: center">
            <%= button_to archmage, method: :get, class:"btn btn-warning" do %> 
            <i class="fa fa-eye" aria-hidden="true"></i> Show  
            <% end %>
          </td>
          <td style="text-align: center">
            <%= button_to edit_archmage_path(archmage), method: :get, class:"btn btn-primary" do %> 
            <i class="fa fa-pencil" aria-hidden="true"></i> Edit  
            <% end %>
          </td>
          <td style="text-align: center">
            <%= button_to archmage_path(archmage), method: :delete, data: {
                    turbo_confirm: "Are you sure?"
                  }, class:"btn btn-danger" do %>
                <i class="fa fa-trash"></i> Delete
                <% end %>     
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No archmages found.</p>
<% end %>
<br>

<%= button_to new_archmage_path, method: :get, class:"btn btn-primary" do %> 
<i class="fa fa-plus" aria-hidden="true"></i> Create Archmage
<% end %>
