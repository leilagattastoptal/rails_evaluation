<br>
<h4><%= @archmage.name %></h4>
<p><%= @archmage.title %></p>

<div style="display: flex" >
  <%= button_to edit_archmage_path(@archmage), method: :get, class:"btn btn-outline-primary" do %>
                <i class="fa fa-pencil"></i> Edit
                <% end %>
 
  <%= button_to archmage_path(@archmage), method: :delete, data: {
                    turbo_confirm: "Are you sure?"
                  }, style:"margin-left: 30px", class:"btn btn-danger" do %>
                <i class="fa fa-trash"></i> Delete
                <% end %>     
                
  <%= button_to archmages_path, method: :get, style:"margin-left: 30px", class:"btn btn-secondary" do %>
                <i class="fa-solid fa-arrow-left"></i> Back to Archmages
                <% end %>
  
</div>

<h4 style="margin-top: 50px">Schools</h4>
<%= render @archmage.schools %>

<h5>Add a school:</h5>
<%= render 'schools/form' %>
